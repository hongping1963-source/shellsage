{
  "name": "shellsage",
  "displayName": "ShellSage",
  "description": "智能的命令行助手，提供命令纠错、建议和使用分析",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:shellsage.showRecommendations",
    "onCommand:shellsage.showStatistics",
    "onTerminalProfile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shellsage.showRecommendations",
        "title": "显示命令推荐"
      },
      {
        "command": "shellsage.showStatistics",
        "title": "显示使用统计"
      }
    ],
    "keybindings": [
      {
        "command": "shellsage.showRecommendations",
        "key": "ctrl+shift+space",
        "when": "terminalFocus"
      }
    ],
    "configuration": {
      "title": "ShellSage",
      "properties": {
        "shellsage.suggestions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用命令建议功能"
        },
        "shellsage.suggestions.triggerCharacters": {
          "type": "array",
          "default": ["-", ".", "/"],
          "description": "触发命令建议的字符"
        },
        "shellsage.suggestions.maxItems": {
          "type": "number",
          "default": 5,
          "description": "最大建议数量"
        },
        "shellsage.recommendations.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用命令推荐功能"
        },
        "shellsage.recommendations.maxItems": {
          "type": "number",
          "default": 5,
          "description": "最大推荐数量"
        },
        "shellsage.recommendations.patterns": {
          "type": "array",
          "default": [
            {
              "pattern": "^git",
              "commands": ["git status", "git add", "git commit", "git push", "git pull"],
              "description": "Git 版本控制命令"
            },
            {
              "pattern": "^npm",
              "commands": ["npm install", "npm start", "npm run", "npm test"],
              "description": "NPM 包管理命令"
            },
            {
              "pattern": "^docker",
              "commands": ["docker ps", "docker images", "docker run", "docker-compose up"],
              "description": "Docker 容器命令"
            }
          ],
          "description": "命令推荐模式配置"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
